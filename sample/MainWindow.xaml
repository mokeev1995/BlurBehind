<Window x:Class="BlurBehindDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello Blur!" Height="800" Width="800"
		Background="#A8000000"
		AllowsTransparency="True"
		WindowStyle="None"
		BorderThickness="3"
		BorderBrush="Gray"
		WindowStartupLocation="CenterScreen"
		Loaded="Window_Loaded">
    <Grid>
		<Grid Background="SlateGray" Width="500" Height="500">
			<TextBlock x:Name="Block" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" Foreground="White">
			Hello Blur!
			</TextBlock>
			<Button Height="50" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Enable" Click="Button_Click"/>
			<Label Height="50" Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Right" x:Name="Text" Foreground="White" Content="Version: v6.0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
		</Grid>
	</Grid>
</Window>
