<Window x:Class="BlurBehindDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello Blur!" Height="800" Width="800"
        Background="#A8FF9393"
        AllowsTransparency="True"
        WindowStyle="None"
        BorderThickness="3"
        BorderBrush="Gray"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
	<Grid>
		<Grid Background="SlateGray" Width="500" Height="500">
			<TextBlock x:Name="Block" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" Foreground="White">
				Hello Blur!
			</TextBlock>
			<Grid Margin="0,450,0,0">
				<Button Width="245" HorizontalAlignment="Left" x:Name="EnableBtn" Click="EnableBtn_OnClick">Enable</Button>
				<Button Width="245" HorizontalAlignment="Right" x:Name="DisableBtn" Click="DisableBtn_OnClick">Disable</Button>
			</Grid>
		</Grid>
	</Grid>
</Window>